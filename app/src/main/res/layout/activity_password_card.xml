<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/card">

    <LinearLayout
        android:id="@+id/card_front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/text_card_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <Button
            android:id="@+id/btn_card_query"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="@string/action_card_query"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_card_edit"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="@string/action_card_edit"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_card_delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="@string/action_card_delete"
            android:gravity="center"/>
    </LinearLayout>
</FrameLayout>
