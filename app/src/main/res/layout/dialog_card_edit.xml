<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialog_card_edit">
    <TextView
        android:id="@+id/card_edit_account"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="40px"
        android:background="#99cccc"
        android:gravity="center"
        android:textColor="#666666"
        />

    <EditText
        android:id="@+id/card_edit_new_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/form_password"
        android:inputType="textPassword"
        android:textColorHint="#006633"
        android:textSize="40px" />

    <EditText
        android:id="@+id/card_edit_new_password_again"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/form_password_again"
        android:textColorHint="#006633"
        android:textSize="40px"
        android:inputType="textPassword"/>

</LinearLayout>